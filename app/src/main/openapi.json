{
  "openapi": "3.0.3",
  "info": {
    "title": "TP1 - Teléfono descompuesto",
    "description": "Title",
    "version": "1.0.0"
  },
  "paths": {
    "/register-node": {
      "post": {
        "operationId": "registerNode",
        "description": "Registra un nuevo nodo",
        "parameters": [
          {
            "name": "host",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "port",
            "in": "query",
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "name",
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Todo bien",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/registerResponse"
                }
              }
            }
          }
        }
      }
    },
    "/relay": {
      "post": {
        "operationId": "relayMessage",
        "description": "Firma un mensaje y lo manda al siguiente",
        "requestBody": {
          "description": "El mensaje y las firmas anteriores",
          "content": {
            "multipart/mixed": {
              "schema": {
                "type": "object"
              }
            }
          }
        },
        "responses": {
          "202": {
            "description": "mensaje recibido y reenviado.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          }
        }
      }
    },
    "/play": {
      "post": {
        "operationId": "sendMessage",
        "description": "Comienza el juego!",
        "requestBody": {
          "description": "El mensaje a enviar por la red telefónica",
          "required": true,
          "content": {
            "*/*": {
              "schema": {
                "type": "object"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "La red telefónica funcionó bien!",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/playResponse"
                }
              }
            }
          },
          "503": {
            "description": "La red telefónica falló",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/playResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "registerRequest": {
        "type": "object",
        "required": [
          "host",
          "port",
          "name"
        ],
        "properties": {
          "host": {
            "type": "string"
          },
          "port": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          }
        }
      },
      "registerResponse": {
        "type": "object",
        "required": [
          "nextHost",
          "nextPort",
          "uuid",
          "hash"
        ],
        "properties": {
          "nextHost": {
            "type": "string"
          },
          "nextPort": {
            "type": "integer"
          },
          "uuid": {
            "type": "string"
          },
          "hash": {
            "type": "string"
          }
        }
      },
      "playResponse": {
        "type": "object",
        "properties": {
          "hash": {
            "type": "string",
            "description": "el hash del mensaje original que enviaste"
          },
          "signatures": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "description": "El nombre del nodo que firmo"
                },
                "hash": {
                  "type": "string",
                  "description": "El hash de la firma del nodo"
                }
              }
            }
          }
        }
      }
    }
  }
}
